<%- include('partials/header') %>


<div class="jumbotron centered">
  <div class="container">
    <i class="fas fa-key fa-6x"></i>
    <h1 class="display-3">Secrets</h1>
    <form action="/search" method="get">
      <input minlength="3" type="text"  required name="q">
      <button class="btn btn-light btn-lg">🔍</button>
    </form>
    <p class="lead">Don't keep your secrets, share them anonymously!</p>
    <hr>
    <% articles.forEach(function(post){ %>
    <h1><%- post.title %></h1>
    <img src="<%- post.pimg %>" alt="<%- post.title %>">
    <p><%- post.content %></p>
    <a href="/p/<%- post.url %>">Read More.</a>
    <%  }); %>

  </div>
</div>

<%- include('partials/footer') %>
